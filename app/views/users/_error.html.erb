<% if  @user != nil %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<% if flash[:message] %>
  <ul>
    <% flash[:message].each do |message| %>
      <LI><%= message %></li>
    <% end %>
  </ul>
<% end %>
